(setq confirm-kill-emacs 'y-or-n-p)

(setq redisplay-preemption-period nil)
(electric-pair-mode +1)

;; yasnippets
(require 'yasnippet)
(setq yas/trigger-key (kbd "C-c <kp-multiply>"))
(yas-global-mode 1)

;; I need to figure out why this makes emacs so slow.
